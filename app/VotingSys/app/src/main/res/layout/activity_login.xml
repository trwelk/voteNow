<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="0dp">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EB444747">

        <LinearLayout
            android:padding="0dp"
            android:id="@+id/loadingPanel"
            android:background="@drawable/ic_launcher_foreground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="1dp"
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1ECEC"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/bg_top_header"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ic_bg_topheader"/>ound" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Voting Application Login"
                    android:textColor="#02FFD8"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:background="#5E5656"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText

                    android:layout_marginTop="15dp"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:layout_gravity="center"
                    android:textColor="#02FFD8"
                    android:background="@drawable/button_style_att"
                    android:hint="User Name"
                    android:textColorHint="#ECE6E6"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#02FFD8"
                    android:background="@drawable/button_style_att"
                    android:hint="Password"
                    android:textColorHint="#F3EFEF"
                    android:inputType="textPassword"
                    android:textStyle="bold" />

                <Button
                    android:onClick="login"
                    android:padding="10dp"
                    android:text="Sign In"
                    android:textColor="#02FFD8"
                    android:background="@drawable/button_style_att"
                    android:layout_marginTop="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Powered by TeamX"
                    android:textColor="#07E2A4"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/login_polition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Powered by TeamX"
                    android:textColor="#07E2A4"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>



    </ScrollView>



</RelativeLayout>

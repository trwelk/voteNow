<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="0dp">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EB444747">

        <LinearLayout
            android:padding="0dp"
            android:id="@+id/loadingPanel"
            android:background="@drawable/ic_launcher_foreground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="1dp"
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1ECEC"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/bg_top_header"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ic_bg_topheader"/>ound" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="My vote Up to Now "
                    android:textColor="#0C0C0C"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:background="#5E5656"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/number_result"
                    android:background="@drawable/button_style_att"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="20"
                    android:textColor="#02FFD8"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/login_polition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Powered by TeamX"
                    android:textColor="#07E2A4"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>



    </ScrollView>



</RelativeLayout>
